# 环境配置示例 - 复制到 .env 并填充实际值

# ==================== OpenAI API ====================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== 后端配置 ====================
# Node.js 服务器
NODE_ENV=production
PORT=3000
FASTAPI_URL=http://localhost:8000
FRONTEND_URL=http://localhost

# Python FastAPI 服务器
PYTHONUNBUFFERED=1
API_HOST=0.0.0.0
API_PORT=8000
DATABASE_URL=sqlite:////app/database/soundscape.db

# ==================== 日志配置 ====================
LOG_LEVEL=info
LOG_FORMAT=json

# ==================== 存储配置 ====================
STORAGE_PATH=/app/storage
AUDIO_CACHE_PATH=/app/storage/audio/cache
UPLOADS_PATH=/app/storage/audio/uploads

# ==================== 腾讯云配置 (可选) ====================
# TENCENT_SECRET_ID=xxxx
# TENCENT_SECRET_KEY=xxxx
# TENCENT_REGION=ap-shanghai
# TENCENT_BUCKET=soundscape-bucket

# ==================== 其他配置 ====================
TIMEZONE=Asia/Shanghai
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
MAX_CONTENT_SIZE=52428800
